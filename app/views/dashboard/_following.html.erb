<div class="panel panel-default" style="border: 0px;">
    <div class="panel-heading">
        <div class="panel-title">
            Following
        </div>
    </div>
    <div class="panel-body">
            <% @followings.each do |following| %>
                    <div class="row">
                        <span class="col-md-10 col-xs-10 following"><%= following.username %></span>
                            <%= link_to "OY",  {:controller => "justoys",  :action => "new" , :receiver_id => following.id}, {:class => "btn-oy col-md-2 col-xs-2 pull-right"}%>
                    </div>
            <% end %>
    </div>
</div>
